<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('../parts/head') %>
  </head>
  <body>
    <div class="full-wrapper">
      <%-include('../parts/header') %>
      <div class="container">
        <div class="d-flex flex-column align-items-center">
          <div class="form-group">
            <!-- 제목 -->
            <label for="title">Title</label>
            <input
              type="text"
              class="form-control"
              id="title"
              placeholder="Enter title"
            />
            <!-- timelength 설정 -->
            <br />
            <label>Time Length</label>
            <div class="align-items-center d-flex">
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="radio"
                  name="exampleRadios"
                  id="exampleRadios1"
                  value="option1"
                  checked
                />
                <label class="form-check-label" for="exampleRadios1">
                  30Min
                </label>
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="radio"
                  name="exampleRadios"
                  id="exampleRadios2"
                  value="option2"
                />
                <label class="form-check-label" for="exampleRadios2">
                  60Min
                </label>
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="radio"
                  name="exampleRadios"
                  id="exampleRadios3"
                  value="option3"
                />
                <label class="form-check-label" for="exampleRadios3">
                  120Min
                </label>
              </div>
            </div>
            <!-- date range 설정 -->
            <br />
            <div class="input-group input-daterange">
              <div class="date-range__picker">
                <label for="startDatePicker">Start Date</label>
                <input type="text" id="startDatePicker" class="form-control" />
              </div>
              <div class="date-range__picker">
                <label for="endDatePicker">End Date</label>
                <input type="text" id="endDatePicker" class="form-control" />
              </div>
            </div>
            <!-- 요일별 시간대 설정 -->
            <div class="d-flex flex-column">
              <div>월</div>
              <div>화</div>
              <div>수</div>
              <div>목</div>
              <div>금</div>
              <div>토</div>
              <div>일</div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/static/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.10.0/js/bootstrap-datepicker.min.js"
      integrity="sha512-LsnSViqQyaXpD4mBBdRYeP6sRwJiJveh2ZIbW41EBrNmKxgr/LFZIiWT6yr+nycvhvauz8c2nYMhrP80YhG7Cw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.10.0/css/bootstrap-datepicker.min.css"
      integrity="sha512-34s5cpvaNG3BknEWSuOncX28vz97bRI59UnVtEEpFX536A7BtZSJHsDyFoCl8S7Dt2TPzcrCEoHBGeM4SUBDBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <script src="/static/js/createForm.js"></script>
  </body>
</html>
